<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToysAddForm"
    android:padding="15dp"
    android:orientation="vertical">


  <ImageView
      android:id="@+id/imageView"
      android:layout_width="wrap_content"
      android:layout_height="126dp"
      android:contentDescription="@string/string_softtoy"
      app:srcCompat="@drawable/toy3"
      tools:ignore="ImageContrastCheck" />

  <EditText
      android:id="@+id/edit_ToyID"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:drawableLeft="@drawable/ic_baseline_toys_24"
      android:drawablePadding="10dp"
      android:hint="@string/ToyID"
      android:importantForAutofill="no"
      android:inputType="text"
      android:minHeight="48dp"
      android:textColorHint="@color/black"
      android:drawableStart="@drawable/ic_baseline_toys_24" />

  <EditText
      android:id="@+id/edit_ToyName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:drawableStart="@android:drawable/btn_star_big_off"
      android:drawableLeft="@android:drawable/btn_star_big_off"
      android:drawablePadding="10dp"
      android:hint="@string/Toyname"
      android:importantForAutofill="no"
      android:inputType="textPersonName"
      android:minHeight="48dp"
      android:textColorHint="@color/black" />

  <EditText
      android:id="@+id/edit_ToyDescription"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:drawableLeft="@drawable/ic_baseline_description_24"
      android:drawablePadding="10dp"
      android:hint="@string/ToyDescription"
      android:importantForAutofill="no"
      android:inputType="text"
      android:minHeight="48dp"
      android:textColorHint="@color/black"
      android:drawableStart="@drawable/ic_baseline_description_24" />

  <EditText
      android:id="@+id/edit_ToyColour"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:drawableLeft="@drawable/ic_baseline_colorize_24"
      android:drawablePadding="10dp"
      android:hint="@string/ToyColor"
      android:importantForAutofill="no"
      android:inputType="text"
      android:minHeight="48dp"
      android:textColorHint="@color/black"
      android:drawableStart="@drawable/ic_baseline_colorize_24" />

  <EditText
      android:id="@+id/edit_ToyBrand"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:drawableLeft="@drawable/ic_baseline_branding_watermark_24"
      android:drawablePadding="10dp"
      android:hint="@string/ToyBrand"
      android:importantForAutofill="no"
      android:inputType="text"
      android:minHeight="48dp"
      android:textColorHint="@color/black"
      android:drawableStart="@drawable/ic_baseline_branding_watermark_24" />

  <EditText
      android:id="@+id/edit_ToyModel"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:drawableLeft="@drawable/ic_baseline_build_circle_24"
      android:drawablePadding="10dp"
      android:hint="@string/ToyModel"
      android:importantForAutofill="no"
      android:inputType="text"
      android:minHeight="48dp"
      android:textColorHint="@color/black"
      android:drawableStart="@drawable/ic_baseline_build_circle_24" />

  <EditText
      android:id="@+id/edit_Price"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:drawableLeft="@drawable/ic_baseline_attach_money_24"
      android:drawablePadding="10dp"
      android:hint="@string/ToyPrice"
      android:importantForAutofill="no"
      android:inputType="numberDecimal"
      android:minHeight="48dp"
      android:textColorHint="@color/black"
      android:drawableStart="@drawable/ic_baseline_attach_money_24" />

  <EditText
      android:id="@+id/edit_ToyDate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:drawableLeft="@drawable/ic_baseline_date_range_24"
      android:drawablePadding="10dp"
      android:hint="@string/ToyDate"
      android:importantForAutofill="no"
      android:inputType="date"
      android:minHeight="48dp"
      android:textColorHint="@color/black"
      android:drawableStart="@drawable/ic_baseline_date_range_24" />

  <Button
      android:id="@+id/btn_submit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:background="@drawable/homebtn_bg"
      android:text="@string/Submitbtn"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:textStyle="bold"
      app:backgroundTint="#FF5D55"
      tools:ignore="TextContrastCheck" />

  <Button
      android:id="@+id/btn_open"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:background="@drawable/homebtn_bg"
      android:text="@string/InsertFormdetails"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:textStyle="bold"
      app:backgroundTint="#FF5D55"
      tools:ignore="TextContrastCheck" />


</LinearLayout>