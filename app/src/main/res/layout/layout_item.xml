<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <TextView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="@string/_8942"
        android:textSize="20sp"
        android:id="@+id/txt_option"
        android:layout_gravity="right"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_toys"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:contentDescription="@string/tz"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_toys_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_toyid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_toyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_toyDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_toycolour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_toyBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_toyModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_toyPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_toyDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="text"
                android:textSize="20sp" />


        </LinearLayout>



    </LinearLayout>





</androidx.cardview.widget.CardView>